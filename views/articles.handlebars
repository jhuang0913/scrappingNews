<div class="page-header">
    <h1>Welcome to New York Times <small>Scraping App</small></h1>
    <a href="/"><button class="btn btn-default">Home</button></a>
    <a href="/saved"><button class="btn btn-primary">Save Articles</button></a>

</div>

<div class="jumbotron">
    <h1 class="center">You have {{result.length}} new Articles!!</h1>
</div>

<!-- Trigger the modal with a button -->

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">New Articles scraped!!!!</h4>
            </div>
            <div class="modal-body">
                <p>You have scraped {{result.length}}  new articles. Awesome!!</p>
            </div>
            <div class="modal-footer">
                <a href="/articles"><button type="button" class="btn btn-primary">Ok</button></a>
            </div>
        </div>

    </div>
</div>

{{#each result}}
    {{#unless saved}}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{title}}</h3>
        <form class="save" action="/saved/{{_id}}" method="POST">
            <button class="btn btn-default">Save Article</button>
        </form>
    </div>
    <div class="panel-body">
        <p>{{summary}}</p>
        <a href="{{link}}">Read more</a>


    </div>
</div>
        {{/unless}}

{{/each}}
